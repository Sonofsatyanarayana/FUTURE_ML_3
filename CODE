import tkinter as tk
from tkinter import scrolledtext
import random


# Sample order data
order_data = {
    "ORD123": "ğŸ“¦ Your order ORD123 is out for delivery.",
    "ORD456": "âœ… Your order ORD456 was delivered on 1st June 2025.",
    "ORD789": "âŒ Your order ORD789 was cancelled. Refund is being processed.",
    "ORD101": "ğŸ•’ Your order ORD101 is being packed and will ship soon.",
    "ORD202": "âœ… Your order ORD202 was delivered on 28th May 2025.",
    "ORD303": "ğŸšš Your order ORD303 is in transit and will arrive tomorrow."
}

intents = {
    "greeting": {
        "keywords": ["hi", "hello", "hey", "hii"],
        "responses": ["Hello! How can I help you?", "Hi there! What can I do for you?"]
    },
    "order_status": {
        "keywords": ["order", "track", "status", "where"],
        "responses": ["Sure, please enter your Order ID to check the status."]
    },
    "refund": {
        "keywords": ["refund", "return", "money back", "cancel"],
        "responses": ["Okay, please enter your Order ID and reason for return."]
    },
    "thankyou": {
        "keywords": ["thanks", "thank you", "ok"],
        "responses": ["You're welcome! ğŸ˜Š", "Glad I could help!"]
    },
    "goodbye": {
        "keywords": ["bye", "goodbye", "see you"],
        "responses": ["Goodbye! Have a nice day!", "See you soon! ğŸ‘‹"]
    }
}


def get_bot_response(user_input):
    user_input = user_input.lower().strip()
    if user_input.upper() in order_data:
        return order_data[user_input.upper()]
    for intent, data in intents.items():
        if any(keyword in user_input for keyword in data["keywords"]):
            return random.choice(data["responses"])
    return "Sorry, I didnâ€™t understand that. Can you please rephrase?"


def send_message():
    user_input = user_entry.get().strip()
    if not user_input:
        return
    chat_area.config(state=tk.NORMAL)
    chat_area.insert(tk.END, f"ğŸ§‘ You: {user_input}\n", "user")
    response = get_bot_response(user_input)
    chat_area.insert(tk.END, f"ğŸ¤– Bot: {response}\n\n", "bot")
    chat_area.config(state=tk.DISABLED)
    chat_area.see(tk.END)
    user_entry.delete(0, tk.END)


def enter_pressed(event):
    send_message()


# ------------------ GUI Setup ------------------ #
window = tk.Tk()
window.title("âœ¨ Customer Support Chatbot")
window.geometry("550x550")
window.configure(bg="#F0F4F8")

# Styles
font_family = "Segoe UI"
bot_color = "#F1F0F0"
user_color = "#DCF8C6"

# Chat Display
chat_area = scrolledtext.ScrolledText(window, font=(font_family, 12), wrap=tk.WORD, bg="white", fg="#333333")
chat_area.pack(padx=10, pady=10, fill=tk.BOTH, expand=True)
chat_area.insert(tk.END, "ğŸ¤– Bot: Hello! I'm your support assistant. Type your message below.\n\n", "bot")
chat_area.config(state=tk.DISABLED)

chat_area.tag_config("user", background=user_color)
chat_area.tag_config("bot", background=bot_color)

# Input Frame
input_frame = tk.Frame(window, bg="#F0F4F8")
input_frame.pack(padx=10, pady=10, fill=tk.X)

# Entry Field
user_entry = tk.Entry(input_frame, font=(font_family, 12), bg="#FFFFFF", relief=tk.FLAT, bd=2)
user_entry.pack(side=tk.LEFT, fill=tk.X, expand=True, padx=(0, 10))
user_entry.focus()

# Send Button
send_button = tk.Button(
    input_frame,
    text="Send",
    command=send_message,
    font=(font_family, 12, "bold"),
    bg="#4CAF50",
    fg="white",
    activebackground="#45A049",
    padx=20,
    pady=5,
    relief=tk.FLAT
)
send_button.pack(side=tk.RIGHT)

# Enter key bind
user_entry.bind("<Return>", enter_pressed)

# Run the GUI
window.mainloop()
